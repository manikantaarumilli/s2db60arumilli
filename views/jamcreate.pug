extends layout 
 
block content 
  h1= title 
 
  form(id='jamForm', action="/resource/jam", method="POST") 
    div.form-group 
        label.jamAttr(for='jam_name') name 
        input#jam_name(type='text', name='jam_name') 
    div.form-group 
        label.jamAttr(for='cost') cost 
        input#cost(type='text', name='cost') 
    div.form-group 
        label.jamAttr(for='quantity') quantity 
        input#quantity(type='number', name='quantity') 
    input(type="submit") 
 
  script. 
    document.forms['jamForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 